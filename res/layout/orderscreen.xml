<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs2114.restaurantmanager.MainScreen" >

    <Button
        android:id="@+id/backToChair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Chair" />

    <TextView
        android:id="@+id/chairNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/backToChair"
        android:layout_alignBottom="@+id/backToChair"
        android:layout_centerHorizontal="true"
        android:text="Chair #"
        android:textAppearance="?android:attr/textAppearanceLarge" />



    <Button
        android:id="@+id/addOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/clearChair"
        android:layout_alignLeft="@+id/backToChair"
        android:text="Add Order" />

    <Button
        android:id="@+id/clearChair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addOrder"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="39dp"
        android:text="Clear" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addOrder"
        android:layout_alignParentLeft="true" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinner1"
        android:layout_alignLeft="@+id/backToChair"
        android:layout_alignRight="@+id/spinner1"
        android:layout_below="@+id/backToChair" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

</RelativeLayout>